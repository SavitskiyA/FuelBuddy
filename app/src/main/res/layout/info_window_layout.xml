<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/infowindow_bgn"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_6dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@drawable/ic_shell" />

    <LinearLayout

        android:id="@+id/linearLayoutText"
        android:layout_width="@dimen/size_infoWindow_address_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_toEndOf="@+id/imageViewIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="16"
            android:singleLine="true"
            android:text="@string/text_test_address"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_infowindow_address"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_test_price"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_infowindow_price"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2dp"
                android:text="@string/symbol_ruble_Java"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_infowindow_price"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_7dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_toEndOf="@+id/linearLayoutText"
        android:background="@drawable/heart" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_2dp"
        android:layout_marginStart="@dimen/margin_7dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_toEndOf="@+id/imageViewHeart"
        android:background="@drawable/arrow" />


</RelativeLayout>
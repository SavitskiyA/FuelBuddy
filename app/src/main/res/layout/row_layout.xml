<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tabLayoutHeight"
    android:orientation="horizontal"
    android:background="@color/rowBackColor"
    android:layout_marginBottom="@dimen/rowBottomMrgin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/mainRowMargin"
        android:layout_weight="1.8">

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/verticalGasIconMargin"
            android:text="35.5"
            android:textColor="@color/costTextColor"
            android:textSize="@dimen/costTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewRouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewHours"
            android:layout_marginStart="@dimen/smallTextMargin"
            android:layout_marginBottom="@dimen/smallTextMargin"
            android:layout_toEndOf="@id/textViewCost"
            android:text="@string/rubleSymbolJava"
            android:textColor="@color/costTextColor"
            android:textSize="@dimen/currancyTextSize" />


        <TextView
            android:id="@+id/textViewHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCost"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/smallTextMargin"
            android:text="hour ago"
            android:textColor="@color/hoursTextColor"
            android:textSize="@dimen/hoursTextSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="2">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/verticalGasIconMargin" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/mainRowMargin">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/verticalGasIconMargin"
            android:text="Автозаправка Shell"
            android:textSize="@dimen/costTextSize"
            android:textColor="@color/gasNameColor"/>

        <TextView
            android:id="@+id/textViewAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_marginTop="@dimen/smallTextMargin"
            android:text="ул. Садовническая 57"
            android:textSize="@dimen/currancyTextSize"
            android:textColor="@color/adressColor"/>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_bp">

            <TextView
                android:id="@+id/textViewDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/verticalDistancetextMargin"
                android:text="1,3 км"
                android:textColor="@color/distanceTextColor"
                android:textSize="@dimen/currancyTextSize"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>